---
import { Icon } from "astro-icon";
import HeroImage from "~/components/hero-image.astro";
import type { FooterLink } from "~/types";

const links: Array<FooterLink> = [
  {
    url: "https://extropy.sk/",
    description: "Official website",
    icon: "mdi:home",
  },
  {
    url: "https://www.linkedin.com/company/extropysk",
    description: "LinkedIn",
    icon: "simple-icons:linkedin",
  },
  {
    url: "https://www.instagram.com/extropy.sk/",
    description: "Instagram",
    icon: "simple-icons:instagram",
  },
  {
    url: "https://github.com/extropysk",
    description: "GitHub",
    icon: "simple-icons:github",
  },
];
---

<footer
  class="relative flex h-64 items-center justify-center bg-offset"
  id="footer"
>
  <div class="absolute inset-0 hidden overflow-hidden opacity-40 dark:block">
    <HeroImage />
  </div>
  <ul class="relative grid grid-cols-2 gap-4 sm:grid-cols-4">
    {
      links.map((link) => (
        <li>
          <a
            class="flex h-16 w-16 items-center justify-center rounded-full border-2 border-current p-4"
            href={link.url}
          >
            <span class="sr-only">{link.description}</span>
            <Icon class="h-full" name={link.icon} />
          </a>
        </li>
      ))
    }
  </ul>
</footer>
